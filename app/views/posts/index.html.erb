<p style="color: green"><%= notice %></p>
<div class="container p-4 rounded bg-light">
  <div class="d-flex justify-content-between align-items-center">
    <h1>Posts</h1>
    <%= link_to "New post", new_post_path, class: "btn btn-outline-warning " %>
  </div>

  <div class="row">

    <% @posts.each do |post| %>
      <div class="col-md-4 my-2 ">
        <div class="post  text-light rounded px-5 py-1" >
          <%= render post %>
          <p>
            <%= link_to "Show this post", post, class: "btn btn-outline-info py-0 my-1 " %>
          </p>
        </div>
      </div>
    <% end %>
  </div>

  
</div>

<style>
  .container{
    box-shadow: 1px 1px 5px gray;
  }
  .post {
    background: linear-gradient(to right bottom, gray, black, darkcyan);
    box-shadow: 1px 1px 5px gray;
    transition: 0.3s;
    opacity: 0.9;
  }
  .post:hover{
    transform: scale(1.05);
    opacity: 1;
  }
</style>
