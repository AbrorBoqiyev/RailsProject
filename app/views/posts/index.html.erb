<p style="color: green"><%= notice %></p>
<div class="container ">
  <h1>Posts</h1>

  <div id="posts" class="d-flex justify-content-between">

    <% @posts.each do |post| %>
    <div class="bg-secondary text-info rounded px-5" >
      <%= render post %>
      <p>
        <%= link_to "Show this post", post %>
      </p>
    </div>
    <% end %>
  </div>

  <%= link_to "New post", new_post_path %>
</div>
